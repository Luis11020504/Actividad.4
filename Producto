# Actividad.4
package producto1;
// Clase abstracta: define atributos y m√©todos comunes
public abstract class Producto1 {

    protected int id;
    protected String nombre;
    protected double precio;

   
    public Producto1(int id, String nombre, double precio) {
        this.id = id;
        this.nombre = nombre;
        this.precio = precio;
    }

   
    public abstract String mostrarInfo();

  
    public abstract double calcularDescuento();

  
    public double getPrecio() {
        return precio;
    }
}
