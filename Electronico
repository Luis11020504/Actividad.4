package producto1;

public class Electronico extends Producto1 implements Inventariable {

    private final int garantia;
    private int stock;

    public Electronico(int id, String nombre, double precio, int garantia) {
        super(id, nombre, precio);
        this.garantia = garantia;
        this.stock = 0;
    }

    @Override
    public String mostrarInfo() {
        return "Electrónico: " + nombre + " | Garantía: " + garantia + " meses | Precio: " + precio;
    }

    @Override
    public double calcularDescuento() {
        return precio * 0.90; // 10% de descuento
    }

    @Override
    public void actualizarStock(int cantidad) {
        stock += cantidad;
    }

    @Override
    public int obtenerStock() {
        return stock;
    }
}
